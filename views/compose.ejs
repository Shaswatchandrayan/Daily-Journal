<%- include('partials/header'); -%>
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label style="padding-top: 5px; padding-bottom: 5px; font-weight: 600;">Title</label>
            <input type="text" class="form-control" name="composeTitle">
        </div>


        <div class="form-group">
            <label style="padding-top: 5px; padding-bottom: 5px; font-weight: 600;">Post</label>
            <textarea class="form-control" rows="3" name="composePost"></textarea>
        </div>

        <div class="form-group" style="padding-top: 10px;">
            <button type="submit" class="btn btn-primary">Publish</button>
        </div>
    </form>

    <%- include('partials/footer'); -%>